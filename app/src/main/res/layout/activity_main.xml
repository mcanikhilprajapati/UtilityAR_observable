<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="com.utilityar.app.com.utility.ar.app.app.HomeScreenActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/localvideocontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"></RelativeLayout>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/pbar_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone" />
    <com.utility.app.DrawablePathImage
        android:id="@+id/camera_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        android:scaleType="fitXY" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginEnd="10dp"
                android:textSize="22sp"
                android:id="@+id/call_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#00000000"
                android:drawableTop="@drawable/callnew"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Start Call"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <Button
                android:layout_marginEnd="10dp"
                android:textSize="22sp"
                android:id="@+id/callend_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#00000000"
                android:drawableTop="@drawable/endcall"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="End Call"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <Button
                android:layout_marginEnd="10dp"
                android:textSize="22sp"
                android:id="@+id/switch_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="@drawable/ic_camera_switch"
                android:fontFamily="@font/roboto_medium"
                android:gravity="end"
                android:text="Switch Camera"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

            <Button
                android:layout_marginEnd="10dp"
                android:textSize="22sp"
                android:id="@+id/get_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="@drawable/photo_camera"
                android:fontFamily="@font/roboto_medium"
                android:text="Take Photo"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:visibility="gone" />


            <Button
                android:layout_marginEnd="10dp"
                android:textSize="22sp"
                android:id="@+id/backto_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="@drawable/video_camera"
                android:fontFamily="@font/roboto_medium"
                android:text="Back To Video"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

            <Button
                android:layout_marginEnd="10dp"
                android:textSize="22sp"
                android:id="@+id/show_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="end"
                android:text="Show Image"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Button
                android:layout_marginEnd="10dp"
                android:textSize="22sp"
                android:id="@+id/btn_mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="@drawable/ic_mic"
                android:drawableTint="#CDDC39"
                android:fontFamily="@font/roboto_medium"
                android:text="Mute"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:visibility="gone"></Button>

            <Button
                android:layout_marginEnd="10dp"
                android:textSize="22sp"
                android:id="@+id/btn_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="@drawable/ic_switch"
                android:fontFamily="@font/roboto_medium"
                android:text="Logout"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"></Button>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:id="@+id/remotevideocontainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:padding="10dp"
                android:rowCount="1"></GridLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbar"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/roboto_medium"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"></TextView>
</RelativeLayout>