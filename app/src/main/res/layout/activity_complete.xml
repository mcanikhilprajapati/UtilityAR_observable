<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.utility.app.LoginScreenActivity">


    <TextView
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/roboto_medium"
        android:text="Procedure Complete\n
Click Home  to return to \n procedure list"
        android:textAlignment="center"
        android:textSize="25sp"></TextView>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="15dp">


        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:drawableTop="@drawable/back_large"
            android:fontFamily="@font/roboto_medium"
            android:text="Back"
            android:textAllCaps="false"
            android:textSize="16sp"></Button>


        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="#00000000"
            android:drawableTop="@drawable/home_selected"
            android:fontFamily="@font/roboto_medium"
            android:text="Home"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:tint="#16FF08"></Button>
    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>